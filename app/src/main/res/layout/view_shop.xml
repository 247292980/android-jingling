<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_figure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fl_ad"
        android:layout_marginBottom="-10dp"
        android:visibility="invisible"
        android:src="@mipmap/shop_figure" />

    <FrameLayout
        android:id="@+id/fl_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shop_title_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:paddingBottom="28dp"
            android:src="@mipmap/shop_chain" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:layout_marginRight="40dp"
            android:src="@mipmap/shop_chain" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_chongzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_purple"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:src="@mipmap/text_chongzhi"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_purple"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:src="@mipmap/text_goumai"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_purple"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:src="@mipmap/text_kuochong"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_purple"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:src="@mipmap/text_buchongtili"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_purple"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:src="@mipmap/text_buchongjingli"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bot_frame">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:src="@mipmap/banner_subscribe" />
    </FrameLayout>
</RelativeLayout>
