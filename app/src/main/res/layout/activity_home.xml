        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/bg_timer" />

                <TextView
                    android:id="@+id/tv_fight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_fight"
                    android:gravity="center"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:id="@+id/ll_timer_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/tv_fight"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="剩余时间"
                        android:textColor="#e1e55e" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0:08"
                        android:textColor="#65dae6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="57/120"
                        android:textColor="#e1e55e" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb_timer_l"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/ll_timer_l"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_fight"
                    android:progress="50"
                    android:progressDrawable="@drawable/layer_list_main_pb" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/bg_timer" />

                <TextView
                    android:id="@+id/tv_energy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_energy"
                    android:gravity="center"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:id="@+id/ll_timer_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/tv_energy"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="剩余时间"
                        android:textColor="#e1e55e" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1:23"
                        android:textColor="#65dae6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="12/80"
                        android:textColor="#e1e55e" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb_timer_r"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/ll_timer_r"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_energy"
                    android:progress="50"
                    android:progressDrawable="@drawable/layer_list_main_pb" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <!--就是一个放view的地方-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_main_btns"
        android:layout_below="@+id/ll_status"></android.support.v4.view.ViewPager>
    <!--第三行 信息-->
    <!--第三行 信息-->
    <!--第三行 信息-->
    <!--第三行 信息-->
    <!--第三行 信息-->
    <!--第三行 信息-->
    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_status"
        android:src="@mipmap/btn_message" />
    <!--滑动菜单-->
    <!--滑动菜单-->
    <!--滑动菜单-->
    <!--滑动菜单-->
